@model IEnumerable<SchoolManagementSystem.Models.NewVM>
<link rel="stylesheet" href="~/css/site.css" />
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutNotHomePage.cshtml";
}

<h1>Logs of Fee Payment</h1>

<table id="customers">

    <tr>
        <th>
          Date of Payment
        </th>
        <th>
            Full Name
        </th>
        <th>
            Paid Amount ($)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.listoffee.datepaid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.listofstudent.firstname) @Html.DisplayFor(modelItem => item.listofstudent.lastname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.listoffee.paidfee)
            </td>

        </tr>

    }

</table>
<div class="calculationBtn">
    <p>Total Course Fee: $@ViewBag.totalfee</p>
    <p>Total Fee Paid until today: $@ViewBag.paidamount </p>
    <p>Remaining Payment Amount: $@ViewBag.remainintfee </p>

</div>

<div class="treqBtn">   <a asp-action="PaymentPage">Make a Payment</a></div>
