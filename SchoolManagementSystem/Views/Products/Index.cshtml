@model IEnumerable<SchoolManagementSystem.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutNotHomePage.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.pname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pcategoryid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.availableqty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.imagename)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isavailable)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.pname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pcategoryid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.availableqty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.imagename)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isavailable)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.productid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.productid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.productid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
