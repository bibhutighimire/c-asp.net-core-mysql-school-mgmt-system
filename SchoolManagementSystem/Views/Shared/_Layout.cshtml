<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SchoolManagementSystem</title>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/nav.css" />
</head>
<body>
    <header>
        <div class="logoHolder"><img src="~/images/logo.jpg" /></div>

        <nav>
            <ul>
                @if (ViewBag.positionid == "2")
                {

                    <li>@Html.ActionLink("Home", "Index", "Home")</li>


                    <li>@Html.ActionLink("Courses", "Index", "CoursenameForAdmin")</li>
                    <li>@Html.ActionLink("Students", "Index", "Student")</li>
                    <li>@Html.ActionLink("Admins", "Index", "Admin")</li>
                    <li>@Html.ActionLink("Teachers", "Index", "Teacher")</li>

                    <li>@Html.ActionLink("Add Students", "Create", "Student")</li>
                    <li>@Html.ActionLink("Add Admins", "Create", "Admin")</li>
                    <li>@Html.ActionLink("Add Teachers", "SignupTeacher", "Signup")</li>
                    <li>@Html.ActionLink("Add Courses", "Create", "CoursenameForAdmin")</li>
                    <li>@Html.ActionLink("Transcript Req", "AllTranscriptReq", "Transcript")</li>
                    <li>@Html.ActionLink("Meeting Req", "Index", "Meeting")</li>
                    <li style="float:right">@Html.ActionLink("Sign Out", "Signout", "Signin")</li>
                    <li style="float:right">@Html.ActionLink("My Profile", "ProfileAdmin", "Student", new { id = @ViewBag.adminid }, null)</li>
                    <li style="float:right; color:red; font-weight:bold; padding: 14px 16px">Hello @ViewBag.firstname</li>

                }

                @if (ViewBag.positionid == "3")
                {

                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("News", "NewsAPI", "NewsAPI")</li>
                    <li>@Html.ActionLink("Transcript Req", "AllTranscriptReq", "Transcript")</li>
                    <li>@Html.ActionLink("Courses", "Index", "CoursenameForAdmin")</li>
                    <li>@Html.ActionLink("Students", "Index", "Student")</li>



                    <li>@Html.ActionLink("Add Grades", "Index", "Grade")</li>
                    <li>@Html.ActionLink("Add Courses", "Create", "CoursenameForAdmin")</li>
                    <li>@Html.ActionLink("Meeting Req", "TeacherMeetingReq", "Meeting", new { id = @ViewBag.teacherid }, null)</li>

                    <li style="float:right">@Html.ActionLink("Sign Out", "Signout", "Signin")</li>
                    <li style="float:right">@Html.ActionLink("My Profile", "ProfileTeacher", "Student", new { id = @ViewBag.teacherid }, null)</li>
                    <li style="float:right; color:red; font-weight:bold; padding: 14px 16px">Hello @ViewBag.firstname</li>
                }

                @if (ViewBag.positionid == "4")
                {

                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("News", "NewsAPI", "NewsAPI")</li>

                    <li>@Html.ActionLink("Courses", "Index", "Coursename")</li>
                    <li>@Html.ActionLink("My Grade", "Index", "Profile", new { id = @ViewBag.studentid }, null)</li>
                    <li>@Html.ActionLink("Request Transcript", "Index", "Transcript", new { id = @ViewBag.studentid }, null)</li>
                    <li>@Html.ActionLink("Request Meeting", "Create", "Meeting")</li>
                    <li>@Html.ActionLink("My Fee", "Index", "Fee", new { id = @ViewBag.studentid }, null)</li>
                    <li style="float:right">@Html.ActionLink("Sign Out", "Signout", "Signin")</li>
                    <li style="float:right">@Html.ActionLink("My Profile", "ProfileStudent", "Student", new { id = @ViewBag.studentid }, null)</li>
                    <li style="float:right; color:red; font-weight:bold; padding: 14px 16px">Hello @ViewBag.firstname</li>

                }


                @if (ViewBag.positionid == null)
                {
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("News", "NewsAPI", "NewsAPI")</li>
                    <li>@Html.ActionLink("Courses", "Index", "Coursename")</li>
                    <li>@Html.ActionLink("Donate", "Index", "Donate")</li>
                    <li style="float:right">@Html.ActionLink("Login", "Index", "Signin")</li>
                }
            </ul>
        </nav>
    </header>
 
