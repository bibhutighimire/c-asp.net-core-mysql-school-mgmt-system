<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SchoolManagementSystem</title>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/nav.css" />
</head>
<body>
    <header>
        <div class="logoHolder"><img src="~/images/logo.jpg" /></div>

        <nav>
            <ul>
                @if (ViewBag.positionid == "2")
                {

                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("News", "Index", "News")</li>

                    <li>@Html.ActionLink("All Courses", "Index", "Coursename")</li>
                    <li>@Html.ActionLink("All Students", "Index", "Signup")</li>
                    <li>@Html.ActionLink("All Admins", "Index", "Signup")</li>
                    <li>@Html.ActionLink("All Teachers", "Index", "Signup")</li>

                    <li>@Html.ActionLink("Add Students", "Index", "Signup")</li>
                    <li>@Html.ActionLink("Add Admins", "Index", "Signup")</li>
                    <li>@Html.ActionLink("Add Teachers", "Index", "Signup")</li>
                    <li>@Html.ActionLink("Add Courses", "Index", "Signup")</li>


                    <li style="float:right">@Html.ActionLink("My Profile", "Index", "Profile", new { id = @ViewBag.teacherid }, null)</li>
                    <li style="float:right">@Html.ActionLink("Sign Out", "Signout", "Signin")</li>
                }

                @if (ViewBag.positionid == "3")
                {

                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("News", "Index", "News")</li>

                    <li>@Html.ActionLink("All Courses", "Index", "Coursename")</li>
                    <li>@Html.ActionLink("All Students", "Index", "Signup")</li>



                    <li>@Html.ActionLink("Add Grades", "Index", "Signup")</li>
                    <li>@Html.ActionLink("Add Courses", "Index", "Signup")</li>


                    <li style="float:right">@Html.ActionLink("My Profile", "Index", "Profile", new { id = @ViewBag.teacherid }, null)</li>
                    <li style="float:right">@Html.ActionLink("Sign Out", "Signout", "Signin")</li>
                }

                @if (ViewBag.positionid == "4")
                {

                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("News", "Index", "News")</li>

                    <li>@Html.ActionLink("All Courses", "Index", "Coursename")</li>
                    <li>@Html.ActionLink("All Students", "Index", "Signup")</li>



                    <li>@Html.ActionLink("My Grade", "Index", "Profile", new { id = @ViewBag.teacherid }, null)</li>


                    <li style="float:right">@Html.ActionLink("My Profile", "Index", "Profile", new { id = @ViewBag.teacherid }, null)</li>
                    <li style="float:right">@Html.ActionLink("Sign Out", "Signout", "Signin")</li>
                }


                @if (ViewBag.positionid == null)
                {
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("News", "Index", "News")</li>
                    <li>@Html.ActionLink("Courses", "Index", "Coursename")</li>
                    <li>@Html.ActionLink("Donate", "Index", "Donate")</li>
                    <li style="float:right">@Html.ActionLink("Student Login", "Index", "Signin")</li>
                    <li style="float:right">@Html.ActionLink("Teacher Login", "Index", "Signin")</li>
                    <li style="float:right">@Html.ActionLink("Admin Login", "Index", "Signin")</li>


                }


            </ul>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <p>Welcome @ViewBag.firstname</p>
            @RenderBody()
        </main>
    </div>

    <footer class="footer-box">
        <div class="container">
            &copy; 2020 - SchoolManagementSystem - <a href="#">Designed and Developed by Bibu</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
