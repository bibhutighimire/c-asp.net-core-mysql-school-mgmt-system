@model SchoolManagementSystem.Models.Product
    <link rel="stylesheet" href="~/css/products.css" />
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutForShopping.cshtml";
}

<h2>@Html.DisplayFor(model => model.pname)</h2>

<div class="row">
    <div class="column" >
        <img src="@("~/image/"+Model.imagename)" runat="server" asp-append-version="true" style="width:500px; height:500px" />
    </div>
    <div class="column" >
        <h2>@Html.DisplayFor(model => model.pname)</h2>
        <p>@Html.DisplayFor(model => model.description)</p>
        <h2>$@Html.DisplayFor(model => model.price)</h2>
        <form asp-action="AddToCart" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" id="productid" name="productid" value="@Model.productid"/>
            </div>
            <div class="checkoutBtn">
                <input type="number" id="quantity"  name="quantity" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add to Cart" class="btn btn-primary" />
            </div>
        </form>
       
        <div class="btnLink">
                             <a asp-action="Index">Back to Shop Page</a>
        </div>
        
    </div>
</div>

