
@model IEnumerable<SchoolManagementSystem.Models.NewVM>
<link rel="stylesheet" href="~/css/form.css" />
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutNotHomePage.cshtml";
   
}
<link rel="stylesheet" href="~/css/form.css" />
<h1>Register a new Teacher Here!</h1>
<hr />
<div class="container">
    <form method="post" action="/Signup/SignupTeacher">
        <div class="row">
            <div class="col-50">
                <label for="firstname"><b>First Name</b></label>
            </div>
            <div class="col-75">
                <input type="text" name="firstname" id="firstname" required />
            </div>
        </div>
        <div class="row">
            <div class="col-50">
                <label for="lastname"><b>Last Name</b></label>
            </div>
            <div class="col-75">

                <input type="text" name="lastname" id="lastname" required />
            </div>
        </div>
        <div class="row">
            <div class="col-50">
                <label for="dob"><b>Date of Birth</b></label>
            </div>
            <div class="col-75">
                <input type="date" name="dob" id="dob" required />
            </div>
        </div>
        <div class="row">
            <div class="col-50">
                <label for="email"><b>Email</b></label>
            </div>
            <div class="col-75">
                <input type="text" name="email" id="email" required />
            </div>
        </div>
        <div class="row">
            <div class="col-50">
                <label for="coursename"><b>Course Name</b></label>
            </div>
            <div class="col-75">
                <select name="coursenameid" id="coursenameid">
                    @foreach (var item in Model)
                    {

                        <option value="@item.listofcoursename.coursenameid">
                            @item.listofcoursename.coursename
                        </option>

                    }
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-50">
                <label for="username"><b>Username</b></label>
            </div>
            <div class="col-75">
                <input type="text" name="username" id="username" required />
            </div>
        </div>
        <div class="row">
            <div class="col-50">
                <label for="password"><b>Password</b></label>
            </div>
           
            <div class="col-75">
                <input type="text" name="password" id="password" required />
            </div>
        </div>
        <div class="row">
            <input type="submit" class="registerbtn" value="Register"/>
        </div>
</form>
</div>

