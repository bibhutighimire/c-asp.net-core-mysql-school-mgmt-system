@model SchoolManagementSystem.Models.Teacher
    <link rel="stylesheet" href="~/css/details.css" />
    @{
        ViewData["Title"] = "Delete";
        Layout = "~/Views/Shared/_LayoutNotHomePage.cshtml";
    }

    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <table id="customer">

            <tr>
                <th>First Name</th>
                <td>@Html.DisplayFor(model => model.firstname)</td>
            </tr>

            <tr>
                <th>Last Name</th>
                <td>@Html.DisplayFor(model => model.lastname)</td>
            </tr>

            <tr>
                <th>Date of Birth</th>
                <td>@Html.DisplayFor(model => model.dob)</td>
            </tr>

            <tr>
                <th>Email</th>
                <td> @Html.DisplayFor(model => model.email)</td>
            </tr>

            <tr>
                <th>Position ID</th>
                <td>@Html.DisplayFor(model => model.positionid)</td>
            </tr>

            <tr>
                <th>Username</th>
                <td> @Html.DisplayFor(model => model.username)</td>
            </tr>

            <tr>
                <th>Course Name ID</th>
                <td>@Html.DisplayFor(model => model.coursenameid)</td>
            </tr>

        </table>

        <form asp-action="Delete">
            <input type="hidden" asp-for="teacherid" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
