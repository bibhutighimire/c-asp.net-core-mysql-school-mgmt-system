@model SchoolManagementSystem.Models.Teacher
    <link rel="stylesheet" href="~/css/formtoaddproduct.css" />
    @{
        ViewData["Title"] = "Edit";
        Layout = "~/Views/Shared/_LayoutNotHomePage.cshtml";
    }

    <form asp-action="Edit" enctype="multipart/form-data">
        <div class="container">
            <h1>Edit Teacher</h1>
            <p>Please fill in this form to create an account.</p>
            <hr>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <input type="hidden" asp-for="teacherid" class="form-control" />
            <div> <label for="firstname"><b>First Name</b></label></div>
            <input asp-for="firstname" class="form-control" />
            <div><label for="lastname"><b>Lastname</b></label></div>
            <input asp-for="lastname" class="form-control" />
            <div><label for="dob"><b>Date of Birth</b></label></div>
            <input asp-for="dob" class="form-control" />
            <div><label for="email"><b>Email</b></label></div>
            <input asp-for="email" class="form-control" />
            <div><label for="positionid"><b>Position ID</b></label></div>
            <input asp-for="positionid" class="form-control" />
            <div><label for="username"><b>Username</b></label></div>
            <input asp-for="username" class="form-control" />
            <div><label for="password"><b>Password</b></label></div>
            <input asp-for="password" class="form-control" />
            <div><label for="coursenameid"><b>Coursename ID</b></label></div>
            <input asp-for="coursenameid" class="form-control" />

        </div>
        
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>


    <div>
        <a asp-action="Index">Back to List</a>
    </div>

