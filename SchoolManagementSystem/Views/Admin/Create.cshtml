@model SchoolManagementSystem.Models.Admin
    <link rel="stylesheet" href="~/css/formtoaddproduct.css" />
    @{
        ViewData["Title"] = "Create";
        Layout = "~/Views/Shared/_LayoutNotHomePage.cshtml";
    }

   
    <hr />
    <form asp-action="Create" enctype="multipart/form-data">
        <div class="container">
            <h1>Create New Admin</h1>
            <p>Please fill in this form to create an account.</p>
            <hr>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div> <label for="firstname"><b>First Name</b></label></div>
            <div><input type="text" placeholder="Enter First Name" name="firstname" id="firstname" required></div>
            <div><label for="lastname"><b>Lastname</b></label></div>
            <div><input type="text" placeholder="Enter Last Name" name="lastname" id="lastname" required></div>
            <div><label for="dob"><b>Date of Birth</b></label></div>
            <div><input type="date" placeholder="Enter DOB" name="dob" id="dob" required></div>
            <div><label for="email"><b>Email</b></label></div>
            <div><input type="text" placeholder="Enter Email Address" name="email" id="email" required></div>
            <div><label for="positionid"><b>Position ID</b></label></div>
            <div><input type="number" placeholder="Enter Position ID" name="positionid" id="positionid" required></div>
            <div><label for="username"><b>Username</b></label></div>
            <div><input type="text" placeholder="Enter Username" name="username" id="username" required></div>
            <div><label for="password"><b>Password</b></label></div>
            <div><input type="password" placeholder="Enter Password" name="password" id="password" required></div>
    </form>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>

