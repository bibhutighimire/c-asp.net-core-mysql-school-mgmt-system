@model IEnumerable<SchoolManagementSystem.Models.NewVM>
    <link rel="stylesheet" href="~/css/site.css" />
    @{
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/_LayoutNotHomePage.cshtml";
        <link rel="stylesheet" href="~/css/site.css" />
    }
    <link rel="stylesheet" href="~/css/site.css" />
    <h1>List of Courses being taught in the School!</h1>

    <table id="customers">
        <tr>
            <th> Course Name ID</th>
            <th> Course Name</th>
            <th> Teacher's Full Name</th>
            <th> Email Address</th>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.listofcoursename.coursenameid)</td>
                <td>@Html.DisplayFor(modelItem => item.listofcoursename.coursename)</td>
                <td>@Html.DisplayFor(modelItem => item.ListOfTeachers.firstname) @Html.DisplayFor(modelItem => item.ListOfTeachers.lastname)</td>
                <td>@Html.DisplayFor(modelItem => item.ListOfTeachers.email)</td>
            </tr>
        }
    </table>
